{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "python-worker",
        "annotations": {
            "description": "A scalable job execution demo, with a Redis queue, CronJob injector, and a scalable set of python workers.",
            "iconClass": "icon-python",
            "tags": "instant-app,python,job,database,redis"
        }
    },
    "objects": [
        {
          "apiVersion": "v1",
          "kind": "ServiceAccount",
          "metadata": {
            "name": "scaler-sa"
          }
        },

        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${DATABASE_SERVICE_NAME}",
                "creationTimestamp": null
            },
            "spec": {
                "ports": [
                    {
                        "name": "redis",
                        "protocol": "TCP",
                        "port": 6379,
                        "targetPort": 6379,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "name": "${DATABASE_SERVICE_NAME}"
                },
                "portalIP": "",
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${DATABASE_SERVICE_NAME}",
                "creationTimestamp": null
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "redis"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "redis:3.2",
                                "namespace": "openshift"
                            },
                            "lastTriggeredImage": ""
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "name": "${DATABASE_SERVICE_NAME}"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "name": "${DATABASE_SERVICE_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "redis",
                                "image": "redis",
                                "ports": [
                                    {
                                        "containerPort": 6379,
                                        "protocol": "TCP"
                                    }
                                ],
                                "livenessProbe": {
                                    "timeoutSeconds": 1,
                                        "initialDelaySeconds": 30,
                                        "tcpSocket": {
                                            "port": 6379
                                        }
                                    },
                                "env": [

                                    {
                                        "name": "REDIS_PASSWORD",
                                        "value": "${REDIS_PASSWORD}"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "${MEMORY_LIMIT}"
                                    }
                                },
                                "volumeMounts": [
                                    {
                                        "name": "${DATABASE_SERVICE_NAME}-data",
                                        "mountPath": "/var/lib/redis/data"
                                    }
                                ],
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "IfNotPresent",
                                "capabilities": {},
                                "securityContext": {
                                    "capabilities": {},
                                    "privileged": false
                                }
                            }
                        ],
                        "volumes": [
                            {
                                "name": "${DATABASE_SERVICE_NAME}-data",
                                "emptyDir": {
                                    "medium": ""
                                }
                            }
                        ],
                        "restartPolicy": "Always",
                        "dnsPolicy": "ClusterFirst"
                    }
                }
            },
            "status": {}
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "python-worker-rq",
                "creationTimestamp": null,
                "labels": {
                    "app": "python-worker-rq"
                }
            },
            "spec": {},
            "status": {
                "dockerImageRepository": ""
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "python-worker-rq",
                "creationTimestamp": null,
                "labels": {
                    "app": "python-worker-rq"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "${GITHUB_WEBHOOK_SECRET}"
                        }
                    },
                    {
                        "type": "Generic",
                        "generic": {
                            "secret": "${GENERIC_WEBHOOK_SECRET}"
                        }
                    },
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${SOURCE_REPOSITORY_URL}",
                        "ref": "${SOURCE_REPOSITORY_REF}"
                    },
                    "contextDir": "worker-rq"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "python:3.4"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "python-worker-rq:latest"
                    }
                },
                "resources": {}
            },
            "status": {
                "lastVersion": 0
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "python-worker-rq",
                "creationTimestamp": null,
                "labels": {
                    "app": "python-worker-rq"
                }
            },
            "spec": {
                "strategy": {
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "python-worker-rq"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "python-worker-rq:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "python-worker-rq",
                    "deploymentconfig": "python-worker-rq"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "app": "python-worker-rq",
                            "deploymentconfig": "python-worker-rq"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "python-worker-rq",
                                "image": "python-worker-rq:latest",
                                "env": [
                                    {
                                        "name": "DATABASE_SERVICE_NAME",
                                        "value": "${DATABASE_SERVICE_NAME}"
                                    },
                                    {
                                        "name": "REDIS_PASSWORD",
                                        "value": "${REDIS_PASSWORD}"
                                    }
                                ],
                                "resources": {}
                            }
                        ]
                    }
                }
            },
            "status": {}
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "python-injector-rq",
                "creationTimestamp": null,
                "labels": {
                    "app": "python-injector-rq"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "${GITHUB_WEBHOOK_SECRET}"
                        }
                    },
                    {
                        "type": "Generic",
                        "generic": {
                            "secret": "${GENERIC_WEBHOOK_SECRET}"
                        }
                    },
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${SOURCE_REPOSITORY_URL}",
                        "ref": "${SOURCE_REPOSITORY_REF}"
                    },
                    "contextDir": "injector-rq"
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "python:3.4"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "DockerImage",
                        "name": "docker-registry-default.apps.vrtx.rhtps.io/jobs/python-injector-rq:latest"
                    }
                },
                "resources": {}
            },
            "status": {
                "lastVersion": 0
            }
        },
        {
            "kind": "CronJob",
            "apiVersion": "batch/v2alpha1",
            "metadata": {
                "name": "python-injector-rq",
                "creationTimestamp": null,
                "labels": {
                    "app": "python-injector-rq"
                }
            },
            "spec": {
                "concurrencyPolicy": "Replace",
                "startingDeadlineSeconds": 30,
                "schedule": "* * * * *",
                "jobTemplate": {
                    "spec": {
                        "completions": 1,
                        "parallelism": 1,
                        "template": {
                            "metadata" : {
                                "creationTimestamp": null
                            },
                            "spec": {
                                "containers": [
                                    {
                                        "name": "python-injector-rq",
                                        "image": "quay.io/nsabine/python-injector-rq",
                                        "env": [
                                            {
                                                "name": "DATABASE_SERVICE_NAME",
                                                "value": "${DATABASE_SERVICE_NAME}"
                                            },
                                            {
                                                "name": "REDIS_PASSWORD",
                                                "value": "${REDIS_PASSWORD}"
                                            }
                                        ],
                                        "resources": {}
                                    }
                                ],
		                "restartPolicy": "Never"
                            }
                        }
                   }
	        }
            },
            "status": {}
        },



        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "python-scaler",
                "creationTimestamp": null,
                "labels": {
                    "app": "python-scaler"
                }
            },
            "spec": {},
            "status": {
                "dockerImageRepository": ""
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "python-scaler",
                "creationTimestamp": null,
                "labels": {
                    "app": "python-scaler"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "${GITHUB_WEBHOOK_SECRET}"
                        }
                    },
                    {
                        "type": "Generic",
                        "generic": {
                            "secret": "${GENERIC_WEBHOOK_SECRET}"
                        }
                    },
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${SOURCE_REPOSITORY_URL}",
                        "ref": "${SOURCE_REPOSITORY_REF}"
                    },
                    "contextDir": "scaler"

                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "python:3.4"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "python-scaler:latest"
                    }
                },
                "resources": {}
            },
            "status": {
                "lastVersion": 0
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "python-scaler",
                "creationTimestamp": null,
                "labels": {
                    "app": "python-scaler"
                }
            },
            "spec": {
                "strategy": {
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "python-scaler"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "python-scaler:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "python-scaler",
                    "deploymentconfig": "python-scaler"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "app": "python-scaler",
                            "deploymentconfig": "python-scaler"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "python-scaler",
                                "image": "python-scaler:latest",
                                "env": [
                                    {
                                        "name": "DATABASE_SERVICE_NAME",
                                        "value": "${DATABASE_SERVICE_NAME}"
                                    },
                                    {
                                        "name": "REDIS_PASSWORD",
                                        "value": "${REDIS_PASSWORD}"
                                    },
                                    {
                                        "name": "NAME_SPACE",
                                        "valueFrom": {
					    "fieldRef": {
					   	"fieldPath": "metadata.namespace"
					    }
					}
                                    }
                                ],
                                "resources": {}
                            }
                        ]
                    }
                }
            },
            "status": {}
        },








        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "dashboard",
                "creationTimestamp": null,
                "labels": {
                    "app": "dashboard"
                }
            },
            "spec": {},
            "status": {
                "dockerImageRepository": ""
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "dashboard",
                "creationTimestamp": null,
                "labels": {
                    "app": "dashboard"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "${GITHUB_WEBHOOK_SECRET}"
                        }
                    },
                    {
                        "type": "Generic",
                        "generic": {
                            "secret": "${GENERIC_WEBHOOK_SECRET}"
                        }
                    },
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${SOURCE_REPOSITORY_URL}",
                        "ref": "${SOURCE_REPOSITORY_REF}"
                    },
                    "contextDir": "dashboard"

                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "python:3.4"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "dashboard:latest"
                    }
                },
                "resources": {}
            },
            "status": {
                "lastVersion": 0
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "dashboard",
                "creationTimestamp": null,
                "labels": {
                    "app": "dashboard"
                }
            },
            "spec": {
                "strategy": {
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "dashboard"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "dashboard:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "deploymentconfig": "dashboard"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "app": "dashboard",
                            "deploymentconfig": "dashboard"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "dashboard",
                                "image": "dashboard:latest",
                                "env": [
                                    {
                                        "name": "DATABASE_SERVICE_NAME",
                                        "value": "${DATABASE_SERVICE_NAME}"
                                    },
                                    {
                                        "name": "REDIS_PASSWORD",
                                        "value": "${REDIS_PASSWORD}"
                                    },
                                    {
                                        "name": "NAME_SPACE",
                                        "valueFrom": {
					                                "fieldRef": {
					   	                              "fieldPath": "metadata.namespace"
					                                }
					                              }
                                    }
                                ],
                                "ports": [
                                  {
                                    "containerPort": 9181,
                                    "protocol": "TCP"
                                  }
                                ],
                                "resources": {}
                            }
                        ]
                    }
                }
            },
            "status": {}
        },
        {
          "kind": "Service",
          "apiVersion": "v1",
          "metadata": {
              "name": "dashboard",
              "creationTimestamp": null,
              "labels": {
                  "app": "dashboard"
              }
          },
          "spec": {
            "ports": [
              {
                "name": "9181-tcp",
                "protocol": "TCP",
                "port": 9181,
                "targetPort": 9181
              }
            ],
            "selector": {
              "deploymentconfig": "dashboard"
            }
          },
          "status": {}
        },
        {
          "kind": "Route",
          "apiVersion": "v1",
          "metadata": {
              "name": "dashboard",
              "creationTimestamp": null,
              "labels": {
                  "app": "dashboard"
              }
          },
          "spec": {
            "to": {
              "kind": "Service",
              "name": "dashboard"
            },
            "tls": {
              "termination": "edge",
              "insecureEdgeTerminationPolicy": "Allow"
            }
          },
          "status": {}

        }
    ],

    "parameters": [
        {
            "name": "SOURCE_REPOSITORY_URL",
            "description": "The URL of the repository with your application source code",
            "value": "https://github.com/nsabine/python-worker"
        },
        {
            "name": "SOURCE_REPOSITORY_REF",
            "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch"
        },
        {
            "name": "DATABASE_SERVICE_NAME",
            "description": "Database service name (value 'redis' currently required for DB autoconfig)",
            "value": "redis",
            "required": true
        },
        {
            "name": "REDIS_PASSWORD",
            "description": "Password for the Redis DB",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{16}",
            "required": true
        },
        {
            "name": "MEMORY_LIMIT",
            "displayName": "Memory Limit",
            "description": "Maximum amount of memory the container can use.",
            "value": "512Mi",
            "required": true
        },
        {
            "description": "Generic webhook secret",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{40}",
            "name": "GENERIC_WEBHOOK_SECRET"
        },
        {
            "description": "GitHub webhook secret",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{40}",
            "name": "GITHUB_WEBHOOK_SECRET"
        }
    ],
    "labels": {
        "template": "python-worker"
    }
}
